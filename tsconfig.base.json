{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@smriti/constants": ["./packages/shared/constants/src/index.ts"],
      "@smriti/logger": ["./packages/shared/logger/src/index.ts"],
      "@smriti/types": ["./packages/shared/types/src/index.ts"],
      "@smriti/utils": ["./packages/shared/utils/src/index.ts"]
    }
  }
}
