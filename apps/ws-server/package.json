{
  "name": "@smriti/ws-server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@smriti/ws-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@smriti/ws-server:build:development"
          },
          "production": {
            "buildTarget": "@smriti/ws-server:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@smriti/logger": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "openai": "^5.9.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10"
  }
}
